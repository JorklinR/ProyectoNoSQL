@model NoSQL_Proyecto.Models.Articulos

<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

<body class="g-sidenav-show bg-gray-100">


    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-md-8">
                <form method="post" asp-action="CreateArticulo" enctype="multipart/form-data">
                    <div class="card">
                        <div class="card-header pb-0">

                            <div class="d-flex align-items-center">
                                <p class="mb-0">Crear Articulo</p>
                                <button type="submit" class="btn btn-primary btn-sm ms-auto">Guardar</button>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="text-uppercase text-sm">Información de articulo</p>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Nombre</label>
                                        <input asp-for="Articulo" class="form-control" type="text" name="Articulo">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Tipo de articulo</label>
                                        <input asp-for="id_Tipo_Articulo" class="form-control" type="text" name="id_Tipo_Articulo">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Fecha de ingreso</label>
                                        <input asp-for="Fecha_Ingreso" class="form-control" type="datetime-local" name="Fecha_Ingreso">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Fecha de salida</label>
                                        <input asp-for="Fecha_Salida" class="form-control" type="datetime-local" disabled name="Fecha_Salida">
                                    </div>
                                </div>
                            </div>
                            <hr class="horizontal dark">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Precio</label>
                                        <input asp-for="Precio" class="form-control" type="number" name="Precio">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Cantidad</label>
                                        <input asp-for="Unidad_Stock" class="form-control" type="number" name="Unidad_Stock">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-control-label">Activo</label>

                                        <div class="checkbox-wrapper-9">
                                            <input asp-for="On_Stock" class="tgl tgl-flat" id="cb4-9" type="checkbox" name="On_Stock" />
                                            <label class="tgl-btn" for="cb4-9"></label>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        handleRegisterResponse('@ViewBag.Success');
    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        $(".checkbox").on('change', function () {
            var isChecked = $(this).is(':checked');
            // Establecer el valor del checkbox como un booleano
            $(this).prop('checked', isChecked);
            // Asignar directamente el valor del checkbox como un booleano al campo 'Active'
            $('input[name="Active"]').val(isChecked);
            console.log($('input[name="Active"]').val()); // Mostrar el valor en la consola (opcional)
        });

        @if (ViewBag.Success != null && (bool)ViewBag.Success)
        {
            // Mostrar SweetAlert si el registro fue exitoso
            <text>
                Swal.fire({
                    icon: 'success',
                    title: '¡Actualización exitosa!',
                    text: 'Se realizaron los cambios correctamente.',
                    showConfirmButton: false,
                    timer: 2000
                }).then(() => {
                    // Redirigir al usuario a la página de inicio de sesión
                    window.location.href = '@Url.Action("EditProveedor", "Table")';
                });
            </text>
        }
        else if (ViewBag.Success != null && !(bool)ViewBag.Success)
        {
            // Mostrar SweetAlert si el registro falló
            <text>
                Swal.fire({
                    icon: 'error',
                    title: '¡Error al editar!',
                    text: 'Hubo un problema al intentar editar los datos.',
                    showConfirmButton: true
                });
            </text>
        }
    </script>




    <!--   Core JS Files   -->

    <script src="~/js/core/popper.min.js"></script>
    <script src="~/js/core/bootstrap.min.js"></script>
    <script src="~/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="~/js/plugins/smooth-scrollbar.min.js"></script>
    <script>
                                var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
            var options = {
                damping: '0.5'
            }
            Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
    </script>
    <!-- Github buttons -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/js//argon-dashboard.min.js?v=2.0.4"></script>
</body>

